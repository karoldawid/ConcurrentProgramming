<Window x:Class="Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Presentation.ModelView"
        Title="Ball Simulation"
        WindowState="Maximized"
        Background="White">


    <Window.DataContext>
        <local:ModelView />
    </Window.DataContext>

    <Viewbox Stretch="Uniform">
        <Grid Width="1200" Height="800" Background="White">

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top"
                        Margin="0,20,0,0"
                        Height="60">

                <TextBlock Text="Ball count:" 
                           VerticalAlignment="Center"
                           FontSize="18"
                           Margin="10,0"/>

                <TextBox Text="{Binding BallCount}"
                         Width="60"
                         Height="30"
                         Margin="10,0"
                         VerticalAlignment="Center"/>

                <Button Content="Start" 
                        Command="{Binding StartCommand}"
                        Width="80"
                        Height="30"
                        Margin="10,0"
                        VerticalAlignment="Center"/>

                <Button Content="Stop" 
                        Command="{Binding StopCommand}"
                        Width="80"
                        Height="30"
                        Margin="10,0"
                        VerticalAlignment="Center"/>

                <Button Content="Add" 
                        Command="{Binding AddCommand}"
                        Width="80"
                        Height="30"
                        Margin="10,0"
                        VerticalAlignment="Center"/>

                <Button Content="Clear" 
                        Command="{Binding ClearCommand}"
                        Width="80"
                        Height="30"
                        Margin="10,0"
                        VerticalAlignment="Center"/>
            </StackPanel>

            <Border BorderBrush="Green" 
                    BorderThickness="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,60,0,0">
                <ItemsControl ItemsSource="{Binding Balls}" 
                              Width="{Binding CanvasWidth}" 
                              Height="{Binding CanvasHeight}"
                              Background="White">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Background="White">
                                <Canvas.Effect>
                                    <DropShadowEffect BlurRadius="10" 
                                                     ShadowDepth="0" 
                                                     Color="#FFD3D3D3"/>
                                </Canvas.Effect>
                            </Canvas>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X}" />
                            <Setter Property="Canvas.Top" Value="{Binding Y}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Path Fill="#FF0066CC" Stroke="#FF003366">
                                <Path.Data>
                                    <EllipseGeometry RadiusX="{Binding r}"
                                                     RadiusY="{Binding r}"/>
                                </Path.Data>
                            </Path>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </Viewbox>
</Window>